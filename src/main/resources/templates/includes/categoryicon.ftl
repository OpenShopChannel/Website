<#switch package.category()>
    <#case "utilities">
        <i class="fas fa-cog fa-fw" aria-hidden="true" style="margin-right: 5px"></i>
        <#break>
    <#case "emulators">
        <i class="fas fa-microchip fa-fw" aria-hidden="true" style="margin-right: 5px"></i>
        <#break>
    <#case "games">
        <i class="fas fa-gamepad fa-fw" aria-hidden="true" style="margin-right: 5px"></i>
        <#break>
    <#case "media">
        <i class="fas fa-photo-video fa-fw" aria-hidden="true" style="margin-right: 5px"></i>
        <#break>
    <#case "demos">
        <i class="fas fa-vial fa-fw" aria-hidden="true" style="margin-right: 5px"></i>
        <#break>
</#switch>